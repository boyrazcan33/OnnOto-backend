FROM openjdk:21-slim

WORKDIR /app

# Install Maven to build the project
RUN apt-get update && \
    apt-get install -y maven

# Copy the entire backend directory
COPY onnoto-backend/ /app/

# Build the project
RUN mvn clean package -DskipTests

# Expose port
EXPOSE 8087

# Run the application
ENTRYPOINT ["java", "-jar", "target/onnoto-backend-0.0.1-SNAPSHOT.jar"]